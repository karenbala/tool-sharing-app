<div class="sign-in">
  <form class="sign-in-container">
    <div class="sign-in-form">
      <h4 class="text-center">Sign In</h4>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="sign-in-form-username">
          <label for="sign-in-form-username"><%= f.label :email %><br /></label>
          <input type="text" class="sign-in-form-username" id="sign-in-form-username" <%= f.email_field :email, autofocus: true, autocomplete: "email" %>>
        </div>

        <div class="sign-in-form-password">
          <label for="sign-in-form-password"><%= f.label :password %><br /></label>
          <input type="text" class="sign-in-form-password" id="sign-in-form-password" <%= f.password_field :password, autocomplete: "current-password" %>>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

          <button type="submit" class="sign-in-form-button"><%= f.submit "Sign In" %></button>
        
      <% end %>
      <div class="sign-in-form-username">
        <label for="sign-in-form-username"><%= render "devise/shared/links" %></label>
      </div>
    </div>
  </form>
</div>